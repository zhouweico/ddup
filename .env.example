# 服务器配置
SERVER_PORT=8080
SERVER_MODE=development

# 数据库配置
DB_DRIVER=postgres        # 可选: postgres, mysql, sqlite
DB_HOST=localhost        # 数据库主机地址
DB_PORT=5432            # 数据库端口
DB_USER=ddup            # 数据库用户名
DB_PASSWORD=            # 数据库密码
DB_NAME=ddup            # 数据库名称/SQLite文件路径

# 数据库连接池配置
DB_POOL_MAX_OPEN=50     # 最大打开连接数
DB_POOL_MAX_IDLE=10     # 最大空闲连接数
DB_POOL_LIFETIME=1h     # 连接最大生命周期
DB_POOL_IDLE_TIME=15m   # 空闲连接超时时间

# 数据库重试配置
DB_RETRY_ATTEMPTS=3     # 连接重试次数
DB_RETRY_INTERVAL=5s    # 重试间隔时间

# JWT配置
JWT_SECRET=your-secret-key 
JWT_EXPIRES_IN=24h

# 健康检查配置
HEALTH_CHECK_INTERVAL=5m

# 日志配置
# 日志级别: -1=DEBUG, 0=INFO, 1=WARN, 2=ERROR, 3=DPANIC, 4=PANIC, 5=FATAL
LOG_LEVEL=0
LOG_FILENAME=app.log
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=5
LOG_MAX_AGE=30
LOG_COMPRESS=true

# Swagger 配置
SWAGGER_HOST=localhost:8080
SWAGGER_SCHEMES=https

